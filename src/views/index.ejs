<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	
	<%- include('partials/headerNavbar') %>

	<div class="banner"></div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			
			<% products.forEach(product =>{%>
				<% if (product.category ==="visited") { %>
					<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">												
						<a href="/products/detail/<%= product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%- product.image || 'default-image.png' %>" alt="imagen de producto">
							</figure>
					<article class="product-box_data">
						
				<span><%= product.discount %> % OFF</span>
				<p><%= product.name %></p>
				<i class="fas fa-truck"></i>
				<% let productDiscount = product.price * product.discount / 100 %>
				<% let finalPrice = product.price - productDiscount %>
				<h2>$<%= toThousand((finalPrice).toFixed(0)) %></h2>
					</article>
				
						</a>
				</section>				
				</div>
					<% } %>
							<% }) %>
			

		</div>
	</div>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
		
			<% products.forEach(product =>{%>
				<% if (product.discount > 0) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					
							<a href="/products/detail/<%= product.id %>">
								<figure class="product-box_image">
									<img src="/images/products/<%= product.image || 'default-image.png' %>" alt="imagen de producto">
								</figure>
						<article class="product-box_data">
							
					<span><%= product.discount %> % OFF</span>
					<p><%= product.name %></p>
					<i class="fas fa-truck"></i>
					<% let productDiscount = product.price * product.discount / 100 %>
					<% let finalPrice = product.price - productDiscount %>
					<h2>$<%= toThousand((finalPrice).toFixed(0)) %></h2>
				</article>
			</a>
				</section>
			</div>
			<% } %>
					<% }) %>
					
		</div>
	</div>

	<%- include('partials/footer') %>
	
</body>	
</html>